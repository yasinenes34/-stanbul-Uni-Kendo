
@{
    ViewBag.Title = "StudentAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <thead class="bg-dark text-center text-white">
        <tr>
            <th colspan="2">Öğrenci Kayıt Formu</th>

        </tr>
    </thead>
    <tbody>
        @using (Html.BeginForm("StudentAdd", "Student", FormMethod.Post)) { 
        <tr>
            <td>İsim</td>

            <td>@(Html.Kendo().TextBox().Name("Name"))</td>
           
        </tr>
        <tr>
            <td>Soy isim</td>

            <td>@(Html.Kendo().TextBox().Name("Surname"))</td>
        </tr>
        <tr>
            <td>Öğrenci Numarası</td>

            <td>@(Html.Kendo().TextBox().Name("StudentNo").HtmlAttributes(new { type = "number"}))</td>
        </tr>
        <tr>
            <td>Üniversite Adı</td>

            <td>@(Html.Kendo().TextBox().Name("UniversityName"))</td>
        </tr>
        <tr>
            <td>Sınav Notu</td>

            <td>@(Html.Kendo().TextBox().Name("examScore").HtmlAttributes(new { type = "number" , max = "100" }))</td>
        </tr>
        <tr>
            <td colspan="2">
                @(Html.Kendo().Button().Name("btnSubmit").HtmlAttributes(new { type = "submit", @class = "ml-auto k-button k-primary", style = "height:35px;width:70px;" }).Content("Save").Events(e => e.Click("btnSubmit_Click")))
            </td>
        </tr>
        }
    </tbody>
</table>
